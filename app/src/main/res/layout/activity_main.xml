<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".MainActivity">
    <TextView
            android:text="السعر"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_price_lbl"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="start"
            android:textAlignment="viewStart" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.422"
            android:layout_marginEnd="44dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:id="@+id/et_price"
            app:layout_constraintStart_toStartOf="@+id/tv_price_lbl"
            app:layout_constraintEnd_toEndOf="@+id/tv_price_lbl"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_price_lbl"/>
    <TextView
            android:text="المشتريات"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_bought_lbl"
            app:layout_constraintStart_toStartOf="@+id/tv_price_lbl"
            app:layout_constraintEnd_toEndOf="@+id/et_price"
            android:textAlignment="viewStart"
            app:layout_constraintTop_toBottomOf="@+id/et_price"
            android:layout_marginTop="72dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <AutoCompleteTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/ac_bought"
            app:layout_constraintStart_toStartOf="@+id/tv_price_lbl"
            app:layout_constraintEnd_toEndOf="@+id/tv_price_lbl"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_bought_lbl"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="حفظ"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_save"
            app:layout_constraintStart_toStartOf="@+id/tv_price_lbl"
            app:layout_constraintEnd_toEndOf="@+id/tv_price_lbl"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/ac_bought"
            app:layout_constraintHorizontal_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>